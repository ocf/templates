apiVersion: v1
kind: Service
metadata:
  name: templates-service
spec:
  selector:
    app: static-templates
  ports:
    - port: 80
      targetPort: 8000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: templates-deployment
  labels:
    app: static-templates
spec:
  replicas: 2
  selector:
    matchLabels:
      app: static-templates
  template:
    metadata:
      labels:
        app: static-templates
    spec:
      containers:
        - name: templates-static-content
          image: "docker.ocf.berkeley.edu/templates:<%= version %>"
          resources:
            limits:
              memory: 128Mi
              cpu: 1000m
          ports:
            - containerPort: 8000
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: dev-templates.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: templates-service
              servicePort: 80
